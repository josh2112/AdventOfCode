{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "dependsOn": "_makecppbuildfolder",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/O2",
                "/nologo",
                "/std:c++20",
                "/Fo${fileDirname}\\cpp\\${fileBasenameNoExtension}.obj",
                "/Fe${fileDirname}\\cpp\\${fileBasenameNoExtension}.exe",
                "/Fd${fileDirname}\\cpp\\${fileBasenameNoExtension}.pdb",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            // Create build directory (if it doesn't already exist)
            "label": "_makecppbuildfolder",
            "type": "shell",
            "command": "md ${fileDirname}\\cpp -ea 0; echo $LASTEXITCODE",
            "problemMatcher": [],
            "group": "none"
        },
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "rust: cargo build"
        }
    ],
    "version": "2.0.0"
}
